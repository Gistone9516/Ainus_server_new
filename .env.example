# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# JWT Configuration (Phase 1)
JWT_SECRET=your-secret-key-at-least-32-characters-long-for-production
# 참고: Access Token 15분, Refresh Token 7일 (코드에서 설정)

# Database - MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=ainus_db

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Encryption (Phase 2)
ENCRYPTION_KEY=your-encryption-key-32-bytes-for-production

# OAuth 2.0 - Google (Phase 2)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth 2.0 - Kakao (Phase 2)
KAKAO_CLIENT_ID=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret

# OAuth 2.0 - Naver (Phase 2)
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# Email Configuration (Phase 3)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@ainus.example.com

# External APIs (Legacy)
ARTIFICIAL_ANALYSIS_API_KEY=your-api-key
NAVER_NEWS_API_KEY=your-api-key

# Google Trends
GOOGLE_TRENDS_ENABLED=true

# Firebase Cloud Messaging
FCM_PROJECT_ID=your-project-id
FCM_PRIVATE_KEY=your-private-key
FCM_CLIENT_EMAIL=your-client-email

# Feature Flags
ENABLE_BATCH_JOBS=true
ENABLE_NOTIFICATIONS=true
