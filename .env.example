# ============================================================
# AI 뉴스 클러스터링 시스템 - 환경 설정
# ============================================================
#
# 사용법: .env.example을 .env로 복사하고 실제 값으로 수정하세요
# cp .env.example .env

# ============ MySQL 설정 ============

# MySQL 호스트
MYSQL_HOST=localhost

# MySQL 포트 (선택사항, 기본값: 3306)
# MYSQL_PORT=3306

# MySQL 사용자명
MYSQL_USER=root

# MySQL 비밀번호
MYSQL_PASSWORD=password

# MySQL 데이터베이스 이름
MYSQL_DB=ai_news_classifier

# ============ Redis 설정 ============

# Redis 호스트
REDIS_HOST=localhost

# Redis 포트 (선택사항, 기본값: 6379)
REDIS_PORT=6379

# Redis 비밀번호 (없으면 비워두기)
REDIS_PASSWORD=

# Redis 데이터베이스 번호 (0-15, 기본값: 0)
REDIS_DB=0

# ============ OpenAI 설정 ============

# OpenAI API 키
# https://platform.openai.com/api-keys에서 발급받을 수 있습니다
OPENAI_API_KEY=sk-...

# OpenAI Assistants API - Assistant ID
# 사전 프롬프트가 입력된 Assistant의 ID
OPENAI_ASSISTANT_ID=asst_EaIPCgI31CX996Zvl61Oqk7C

# ============ 서버 설정 ============

# 서버 포트
PORT=3000

# 실행 환경 (development, production)
NODE_ENV=development

# 디버그 모드
DEBUG=false

# ============ 파이프라인 설정 ============

# 파이프라인 자동 스케줄 활성화 (true/false)
PIPELINE_ENABLE_SCHEDULE=true

# 파이프라인 실행 주기 (cron 형식)
# "0 * * * *" = 매 시간 정각 (기본값)
# cron 형식: "분 시간 일 월 요일"
PIPELINE_SCHEDULE_TIME=0 * * * *

# GPT API 재시도 횟수 (0~5)
PIPELINE_MAX_RETRIES=2

# 재시도 간 대기 시간 (밀리초)
PIPELINE_RETRY_DELAY_MS=5000

# ============ 로깅 설정 ============

# 로그 레벨 (error, warn, info, debug)
LOG_LEVEL=info

# 로그 파일 경로
LOG_FILE_PATH=./logs/app.log

# ============ 선택적 설정 ============

# Naver News API 설정 (뉴스 수집 시 필요)
# NAVER_CLIENT_ID=...
# NAVER_CLIENT_SECRET=...

# 데이터베이스 풀 설정
DB_POOL_SIZE=10
DB_QUEUE_LIMIT=0

# API 요청 타임아웃 (밀리초)
API_TIMEOUT_MS=30000


# Ainus 프로젝트 환경변수 설정 docker-compose 용도. mysql 포트 3307임.

# ===========================================
# MySQL 설정
# ===========================================
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_DATABASE=ai_model_app
MYSQL_USER=ainus_user
MYSQL_PASSWORD=ainus_password_change_me
MYSQL_ROOT_PASSWORD=root_password_change_me

# ===========================================
# Elasticsearch 설정
# ===========================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_NODE=http://localhost:9200

# ===========================================
# Redis 설정
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# ===========================================
# API 설정
# ===========================================
# Artificial Analysis API 키 (필수)
ARTIFICIAL_ANALYSIS_API_KEY=your_api_key_here

# Naver API 키 (뉴스 수집용)
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# ===========================================
# 애플리케이션 설정
# ===========================================
NODE_ENV=development
PORT=3000

# JWT 설정
JWT_SECRET=your_jwt_secret_change_me
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_change_me
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# 소셜 로그인 설정
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Kakao OAuth
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_CALLBACK_URL=http://localhost:3000/auth/kakao/callback

# ===========================================
# 캐싱 설정
# ===========================================
CACHE_TTL_DEFAULT=300
CACHE_TTL_MODELS=600
CACHE_TTL_TIMELINE=300

# ===========================================
# 로깅 설정
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ===========================================
# 보안 설정
# ===========================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# 데이터 수집 설정
# ===========================================
DATA_COLLECTION_CRON=0 0 * * 0
DATA_COLLECTION_ENABLED=true
